{
    //  公共的配置选项
    "compilerOptions": {
        // https://github.com/TypeStrong/ts-loader/issues/1061
        "target": "ES5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "paths": {
            "@/*": ["./src/*"],
            "doc/*": ["./site/*"],
            "docs/*": ["./site/Components/*"],
            "ethan/*": ["./src/*"],
            "ethan-ui": ["./src/index.ts"]
        },
        // https://webpack.docschina.org/guides/typescript/#source-maps
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "strict": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./",
        "strictNullChecks": false,
        "alwaysStrict": false,
        "downlevelIteration": true,
        // https://stackoverflow.com/questions/31685129/typescript-blocks-node-module-factory-pattern-error-ts4060
        "declaration": true,
        "removeComments": true
    }
}
